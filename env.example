# Google OAuth Credentials (Required)
# Copy this file to .env and fill in your actual values
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_ID=your-google-client-id-here
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# OAuth Configuration (Optional)
FASTMCP_SERVER_AUTH_GOOGLE_BASE_URL=http://localhost:8000
FASTMCP_SERVER_AUTH_GOOGLE_REQUIRED_SCOPES=openid,https://www.googleapis.com/auth/userinfo.email,https://www.googleapis.com/auth/spreadsheets,https://www.googleapis.com/auth/drive

# Bearer Token (Optional - for server-to-server authentication)
BEARER_TOKEN=your-google-oauth-access-token-here

# Server Configuration (Optional)
MCP_TRANSPORT=http
MCP_HOST=0.0.0.0
MCP_PORT=8000
DRIVE_FOLDER_ID=your-google-drive-folder-id-here



